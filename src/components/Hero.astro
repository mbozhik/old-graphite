---
import Button from './UI/Button.astro'
import RunningLine from './UI/RunningLine.astro'
import BackgroundImage from './UI/BackgroundImage.astro'

const heightScreen = '!h-[100svh] !h-[100vh]'
---

<section class=`relative flex flex-col overflow-x-hidden text-white ${heightScreen}`>
  <div class="h-full flex flex-col justify-between sm:mt-5 mt-14 sm:mb-24 mb-28">
    <div class="sm:w-[90%] w-[80%] mx-auto font-medium sm:text-5xl text-6xl">
      <h2>24 НОЯБРЯ</h2>
      <h2>ГРАФИТ</h2>
    </div>
    <div class="text-xl font-medium">
      <Button />
    </div>
  </div>
  <div class="absolute inset-0 grid w-full h-screen -z-10 place-items-end bg-black/40">
    <RunningLine />
  </div>
  <BackgroundImage />
</section>
