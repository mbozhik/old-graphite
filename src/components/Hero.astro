---
import Button from './UI/Button.astro'
import RunningLine from './UI/RunningLine.astro'
import BackgroundImage from './UI/BackgroundImage.astro'

const heightScreen = '!h-[100svh] !h-[100vh]'

// <div class="flex sm:w-[90%] w-[80%] mx-auto flex-row justify-between h-full sm:mt-5 mt-10">
//   <div class="z-[99] font-medium sm:text-5xl text-6xl">
---

<section data-section="HERO" class=`relative flex flex-col overflow-hidden text-white ${heightScreen}`>
  <div class="flex flex-col justify-between h-full sm:mt-5 mt-6 sm:mb-24 mb-[30vh]">
    <div class="sm:w-[90%] z-[5] w-[65%] flex justify-between mx-auto font-medium sm:text-5xl text-6xl">
      <h2 class="px-2 py-1 bg-custom-pink w-fit">24 НОЯБРЯ</h2>
      <h2 class="px-2 py-1 bg-custom-pink w-fit">ГРАФИТ</h2>
    </div>
    <div class="text-xl font-medium z-[99]">
      <Button />
    </div>
  </div>
  <div class="absolute bottom-0 grid w-full h-screen z-[98] place-items-end">
    <RunningLine />
  </div>

  <div class="absolute inset-0 z-[6] grid w-full h-screen overflow-hidden">
    <img class="w-full h-full" src="../../bg/1920banner.png" alt="" />
  </div>
  <BackgroundImage />
</section>
